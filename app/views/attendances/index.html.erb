<p id="notice"><%= notice %></p>

<h1>出欠席を登録する</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.status %></td>
        <td><%= attendance.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', attendance %></td>
        <td><%= link_to 'Edit', edit_attendance_path(attendance.id) %></td>
        <td><%= link_to 'Destroy',attendance_path(attendance.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '出欠席を登録する', new_attendance_path %>

<%= month_calendar events: @attendances do |date, attendances| %>
  <%= date.day %>

  <% attendances.each do |attendance| %>
    <div>
      <%= link_to attendance.status, attendance %>
    </div>
  <% end %>
<% end %>
