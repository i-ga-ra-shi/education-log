<%= form_with(model: @attendance, local: true) do |f| %>

    <div class="title">
        <%= f.label :name, "氏名" %>
        <%= f.text_field :name %>
    </div>
    
    <div class="title">
        <%= f.label :status, "出欠席を登録" %>
        <%= f.text_field :status %>
    </div>

    <div class="time">
        <%= f.label :start_time, "日付" %>
        <%= f.date_field :start_time %>
    </div>

    <div class="reason">
        <%= f.label :reason, "理由" %>
        <%= f.text_field :reason %>
    </div>


    <div class="submit">
        <%= f.submit %>
    </div>

<% end %>
