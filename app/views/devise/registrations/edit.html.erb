<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="p-2 text-black-50 fs-1 text-center fw-bold">アカウント編集</div>
    </div>  
  </div>
</div>

<%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "row g-3 mx-auto justify-content-center") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="col-md-8">
    <%= f.label :school, "学校名" %><br />
    <%= f.text_field :school, autofocus: true, class: "form-control" %>
  </div>

  <div class="col-md-8">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="col-md-8">
    <%= f.label :current_password, "現在のパスワード（必須）" %><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  
  <div class="col-md-8">
    <%= f.label :password, "新しいパスワード" %>
      <i>(変更しない場合は空欄のまま)　
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> 文字以上</em>
        <% end %>
      </i>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="col-md-8">
    <%= f.label :password_confirmation, "新しいパスワード（再入力）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="col-md-5 d-grid mb-5">
    <%= f.submit "アカウントを更新する", class: "btn btn-secondary btn-lg" %>
  </div>
<% end %>


<div class="btn btn-danger btn-lg col-md-3 d-grid mx-auto mt-5">
    <%= link_to("退会する", user_registration_path, method: :delete, data: { confirm: "本当に退会しますか？" }, class: "text-decoration-none text-light")  %>
</div>
