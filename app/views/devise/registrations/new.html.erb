<<div class="bg-container">
  <%= render("shared/header") %>
  <div class="bg-image"></div>

  <div class="container py-3 mb-4">
    <div class="row justify-content-center">
      <div class="col-8">
        <div class="p-2 text-white fs-1 text-center fw-bold page-title">新規登録</div>
      </div>  
    </div>
  </div>
</div>

<%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), class: "row g-3 mx-auto justify-content-center", local: true) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="col-md-8">
    <%= f.label :school, "学校名" %><br />
    <%= f.text_field :school, autofocus: true, class: "form-control" %>
  </div>

  <div class="col-md-8">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="col-md-8">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="col-md-8">
    <%= f.label :password_confirmation, "パスワード再入力" %><br />
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="col-md-5 d-grid">
    <%= f.submit "登録", class: "btn btn-secondary btn-lg" %>
  </div>
<% end %>

<div class="fs-3 text-center my-5">o r</div>

<div class="d-flex justify-content-center">
  <div class="text-center">
    <%= link_to("ログイン", new_user_session_path, class: "fs-4 text-black-50 me-5") %>
  </div>

  <div class="text-center">
    <%= link_to("TOP", root_path, class: "fs-4 text-black-50") %>
  </div>
</div>