<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="p-2 text-black-50 fs-1 text-center fw-bold">ログイン</div>
    </div>  
  </div>
</div>

<% if !(flash[:notice]) %>
  <p class="text-center"><%= flash[:notice] %></p>
  <p class="text-center"><%= flash[:alert] %></p>
<% end %>

<%= form_with(model: resource, as: resource_name, url: session_path(resource_name), class: "row g-3 mx-auto justify-content-center", local: true) do |f| %>
  
  <div class="col-md-8">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="col-md-8">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="col-md-8 text-end fs-6">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "ログイン情報を保持" %>
    </div>
  <% end %>

  <div class="col-md-5 d-grid mt-4">
    <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
  </div>

<% end %>


