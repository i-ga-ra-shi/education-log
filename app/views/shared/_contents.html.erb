<div class="container mt-5">
    <div class="row g-4">
        <% @subjects.each do |subject| %>
                <div class="col-lg-4 col-md-6" >
                    <div class="service card-effect">
                        <p>教科：<%= subject.subject %></p>
                        <p>タイトル：<%= subject.title %></p>
                        <p>投稿者：<%= subject.name %></p>
                        <p><%= subject.content %></p>
                    </div>
                </div>
        <% end %>
    </div>
</div>