<%# ヘッダー %>
<nav class="navbar navbar-expand-lg main-header navbar-dark px-5 py-3 sticky-top">
  <div class="container">
    <% if user_signed_in? %>
      <%= link_to("Education Log", subjects_path, class: "text-secondary navbar-brand fs-4 header-logo") %>
    <% else %>
      <%= link_to("Education Log", root_path, class: "navbar-brand fs-4 ") %>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-between" id="navbarSupportedContent">
      <ul class="navbar-nav ms-4 mb-2 mb-lg-0">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-secondary" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              投稿
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li class="nav-item"><%= link_to("新規投稿", new_subject_path, class: "nav-link fs-6 dropdown-item text-secondary") %></li>
              <li class="nav-item"><%= link_to("ユーザーの投稿", subjects_path, class: "nav-link fs-6 dropdown-item text-secondary") %></li>
              <li class="nav-item"><%= link_to("公開されている投稿", publics_path, class: "nav-link fs-6 dropdown-item text-secondary") %></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-secondary" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              生徒管理
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li class="nav-item"><%= link_to("生徒一覧", students_path, class: "nav-link fs-6 dropdown-item text-secondary") %></li>
              <li class="nav-item"><%= link_to("生徒登録", new_student_path, class: "nav-link fs-6 dropdown-item text-secondary") %></li>
              <li class="nav-item"><%= link_to("出欠一覧", user_path(current_user.id), class: "nav-link fs-6 dropdown-item text-secondary") %></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-secondary" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              ユーザー管理
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li class="nav-item"><%= link_to("ログアウト", destroy_user_session_path, method: :delete, data: { confirm: "ログアウトしてよろしいですか？" }, class: "nav-link fs-6 dropdown-item text-secondary") %></li>
              <li class="nav-item"><%= link_to("アカウント編集・退会", edit_user_registration_path, class: "nav-link fs-6 dropdown-item text-secondary") %></li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to("TOP", root_path, class: "nav-link fs-5") %>
          </li>
          <li class="nav-item">
            <%= link_to("ログイン", new_user_session_path, class: "nav-link fs-5") %>
          </li>
          <li class="nav-item">
            <%= link_to("新規登録", new_user_registration_path, class: "nav-link fs-5") %>
          </li>
          <li class="nav-item">
            <%= link_to("公開されている投稿", publics_path, class: "nav-link fs-6 dropdown-item text-secondary") %>
          </li>

        <% end %>
      </ul>
      <% if controller_name == 'subjects' %>
        <%= form_with(url: search_subjects_path, local: true, method: :get, class: "d-flex") do |f| %>
          <%= f.text_field :keyword, placeholder: "KEY WORD", class: "form-control me-2 bg-light me-4 text-center", type: "search" %>
          <%= f.submit "検索", class: "btn btn-light"%>
        <% end %>
      <% end %>
      <% if controller_name == 'publics' %>
        <%= form_with(url: search_publics_path, local: true, method: :get, class: "d-flex") do |f| %>
          <%= f.text_field :keyword, placeholder: "KEY WORD", class: "form-control me-2 bg-light me-4 text-center", type: "search" %>
          <%= f.submit "検索", class: "btn btn-light"%>
        <% end %>
      <% end %>
    </div>
  </div>
</nav>
