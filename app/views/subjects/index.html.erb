<div class="container mt-5">
    <div class="row g-4">
        <% @subjects.each do |subject| %>
                <div class="col-lg-4 col-md-6" >
                    <div class="service card-effect">
                        <div class="iconbox">
                            </i><i class="bi bi-house-door-fill"></i>
                        </div>
                        <h5><%= subject.name %></h5>
                        <p><%= subject.text %></p>
                    </div>
                </div>
        <% end %>
    </div>
</div>

<h4><%= link_to("新規投稿", new_subject_path) %></h4>


<form class="row g-3 mx-auto justify-content-center mt-3">
    <div class="col-md-5">
        <input type="text" class="form-control" placeholder="Full Name">
    </div>
    <div class="col-md-5">
        <input type="text" class="form-control" placeholder="Enter E-mail">
    </div>
    <div class="col-md-10">
        <input type="text" class="form-control" placeholder="Enter Subject">
    </div>
    <div class="col-md-10">
        <textarea cols="30" rows="5" class="form-control" placeholder="Enter Message"></textarea>
    </div>
    <div class="col-md-10 d-grid">
        <button class="btn btn-primary">Sign Up</button>
    </div>
</form>