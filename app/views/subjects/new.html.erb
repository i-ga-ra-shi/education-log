<%= form_with(model: @subject, class: "row g-3 mx-auto justify-content-center", local: true) do |f| %>
  <%= render "shared/error_messages", model: @subject %>

  <div class="col-md-8">
    <%= f.label :subject, "教科" %><br />
    <%= f.text_field :subject, autofocus: true, class: "form-control" %>
  </div>

  <div class="col-md-8">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, autofocus: true, class: "form-control" %>
  </div>

  <div class="col-md-8">
    <%= f.label :name, "投稿者名" %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="col-md-8">
    <%= f.label :content, "コンテンツ" %><br />
    <%= f.text_area :content, autofocus: true, class: "form-control", rows: "5" %>
  </div>

  <div class="col-md-5 d-grid">
    <%= f.submit "投稿する", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
