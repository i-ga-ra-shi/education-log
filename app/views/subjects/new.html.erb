<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="p-2 text-black-50 fs-1 text-center fw-bold">新規投稿</div>
    </div>  
  </div>
</div>

<%= form_with(model: @subject, class: "row g-3 mx-auto justify-content-center px-5", local: true) do |f| %>
  <%= render "shared/error_messages", model: @subject %>

  <div class="col-8">
    <%= f.label :subject, "教科" %><br />
    <%= f.collection_select(:subject_id, ChooseSubject.all, :id, :name, {}, {class:"form-select"}) %>
  </div>

  <div class="col-8">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, autofocus: true, class: "form-control" %>
  </div>

  <div class="col-8">
    <%= f.label :name, "投稿者名" %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="col-8">
    <%= f.label :content, "コンテンツ" %><br />
    <%= f.text_area :content, autofocus: true, class: "form-control", rows: "5" %>
  </div>

  <div class="form-group col-8">
    <%= f.label :file ,"ファイル"%>
    <%= f.file_field :file, onchange: 'previewImage()', class: 'form-control' %>
    <%= f.hidden_field :avatar_cache %>
    <%# <%= image_tag @subject.file.url, class: 'rounded-circle mt-3', id: 'preview', size: '100x100' %>
  </div>

  <div class="col-5 d-grid p-3">
    <%= f.submit "投稿する", class: "btn btn-primary btn-lg p-3" %>
  </div>
<% end %>
